<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
     android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/simple_stylish_background"
    android:focusable="true"
  android:focusableInTouchMode="true" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/tvJornadaMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jornada:"
                android:textColor="#08088A"
                android:textSize="20sp" />
            <TextView
                 android:id="@+id/tvjornadmodbarra"
                 android:layout_width="match_parent"
                 android:layout_height="8px"
                 android:background="@drawable/solid_backgrounds" />

            <Spinner
                android:id="@+id/spJorMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvPerMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="13dp"
                android:textColor="#08088A"
                android:text="Periodo:"
                android:textSize="20sp" />
             <TextView
                 android:id="@+id/tvpermodbarra"
                 android:layout_width="match_parent"
                 android:layout_height="8px"
                 android:background="@drawable/solid_backgrounds" />

            <Spinner
                android:id="@+id/spPeriodoMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tvAnoMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#08088A"
                android:text="Año:"
                android:textSize="20sp" />
             <TextView
                 android:id="@+id/tvanomodbarra"
                 android:layout_width="match_parent"
                 android:layout_height="8px"
                 android:background="@drawable/solid_backgrounds" />

            <EditText
                android:id="@+id/etano1TvMod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Año"
                android:textColor="#000000"
                android:inputType="number" />

            <TextView
                android:id="@+id/tvcursoMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#08088A"
                android:text="Curso o Programa:"
                android:textSize="20sp" />
             <TextView
                 android:id="@+id/tvcurmodbarra"
                 android:layout_width="match_parent"
                 android:layout_height="8px"
                 android:background="@drawable/solid_backgrounds" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/etcursoModTv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:textColor="#000000"
                    android:hint="Codigo de Curso" >

                    
                </EditText>

                <ImageButton
                    android:id="@+id/ibCursoMod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                   
                    android:src="@android:drawable/ic_menu_search" />

            </LinearLayout>

            <TextView
                android:id="@+id/matetvMod"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Asignatura:"
                android:textColor="#08088A"
                android:textSize="20sp" />
             <TextView
                 android:id="@+id/tvmateriamodbarra"
                 android:layout_width="match_parent"
                 android:layout_height="8px"
                 android:background="@drawable/solid_backgrounds" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/ettvMateMod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:ems="10"
                    android:hint="Codigo de Asignatura" />

                <ImageButton
                    android:id="@+id/ibMateMod"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@android:drawable/ic_menu_search" />

            </LinearLayout>

            <Button
                android:id="@+id/btnUpdateMod"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="29dp"
                android:background="@drawable/button_blue"
                android:textColor="#FFFFFF"
                android:text="Actualizar grupo" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>