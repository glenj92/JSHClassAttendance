<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/simple_stylish_background"
    android:focusable="true"
  android:focusableInTouchMode="true">

     <ScrollView
         android:id="@+id/scrollView1"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_alignParentBottom="true"
         android:layout_alignParentLeft="true"
         android:layout_alignParentRight="true"
         android:layout_alignParentTop="true" >

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="465dp"
             android:orientation="vertical" >

             <TextView
                 android:id="@+id/jornadaT"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_below="@+id/tvJornadaElimi"
                 android:layout_marginTop="17dp"
                 android:textColor="#8A0808"
                 android:text="Jormada:"
                 android:textSize="20sp" />

             <TextView
                 android:id="@+id/tvjornadabarra"
                 android:layout_width="match_parent"
                 android:layout_height="10px"
                 android:background="@drawable/razorbackground"  />

             <Spinner
                 android:id="@+id/jornadaRegi"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content" />

             <TextView
                 android:id="@+id/periodoT"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_below="@+id/jornada"
                 android:textColor="#8A0808"
                 android:text="Periodo:"
                 android:textSize="20sp" />

             <TextView
                 android:id="@+id/tvperiodobarra"
                 android:layout_width="match_parent"
                 android:layout_height="10px"
                 android:background="@drawable/razorbackground" />

             <Spinner
                 android:id="@+id/periodoRegi"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_alignParentLeft="true"
                 android:layout_below="@+id/textView6" />

             <TextView
                 android:id="@+id/anoT"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:textColor="#8A0808"
                 android:text="Año:"
                 android:textSize="20sp" />

             <TextView
                 android:id="@+id/tvanobarra"
                 android:layout_width="match_parent"
                 android:layout_height="10px"
                 android:background="@drawable/razorbackground"  />

             <EditText
                 android:id="@+id/etanoRegi"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:ems="10"
                 android:hint="Año"
                 android:textColor="#FA5858"
                 android:inputType="number" >

                 
             </EditText>

             <TextView
                 android:id="@+id/cursoT"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14dp"
                 android:textColor="#8A0808"
                 android:text="Curso o Programa:"
                 android:textSize="20sp" />

             <TextView
                 android:id="@+id/tvcursobarra"
                 android:layout_width="match_parent"
                 android:layout_height="10px"
                 android:background="@drawable/razorbackground" />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/curso1Regi"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10px"
                     android:layout_weight="1"
                     android:ems="10"
                     android:textColor="#FA5858"
                     android:hint="Codigo de Curso" />

                 <ImageButton
                     android:id="@+id/ibCursoRegi"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:src="@android:drawable/ic_menu_search" />

             </LinearLayout>

             <TextView
                 android:id="@+id/asignaturaT"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="14dp"
                 android:layout_weight="1"
                 android:textColor="#8A0808"
                 android:text="Asignatura:"
                 android:textSize="20sp" />

             <TextView
                 android:id="@+id/tvasignatbarra"
                 android:layout_width="match_parent"
                 android:layout_height="10px"
                android:background="@drawable/razorbackground"  />

             <LinearLayout
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content" >

                 <EditText
                     android:id="@+id/materia1Regi"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                     android:layout_marginTop="10px"
                     android:layout_weight="1"
                     android:textColor="#FA5858"
                     android:ems="10"
                     android:hint="Codigo de Asignatura" />

                 <ImageButton
                     android:id="@+id/ibMateRegi"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content"
                   
                     android:src="@android:drawable/ic_menu_search" />

             </LinearLayout>

             <Button
                 android:id="@+id/btGuardarNewRegi"
                 android:layout_width="match_parent"
                 android:layout_height="wrap_content"
                 android:layout_alignParentBottom="true"
                 android:layout_centerHorizontal="true"
                 android:layout_margin="30px"
                 android:layout_marginBottom="16dp"
                 android:layout_weight="0.56"
                 android:background="@drawable/button_red"
                 android:textColor="#FFFFFF"
                 android:text="Registrar grupo" />
         </LinearLayout>

     </ScrollView>

</RelativeLayout>