<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo_amarillo" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            
            android:orientation="vertical" >

            <TextView
                android:id="@+id/bienvenida"
                android:layout_width="match_parent"
                android:layout_height="70px"
                android:background="@drawable/canvas_darkblue"
                android:hint="Bienvenida"
                
                android:textColor="#ffffff"
                android:textSize="15sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/btnregistrogru"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:background="@drawable/button_red"
                android:text="Crear grupo"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/btnModificarUpdateGrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:layout_marginLeft="62dp"
                android:background="@drawable/button_green"
                android:text="Editar grupo"
                android:textColor="#fff"
                android:textSize="22sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <Button
                    android:id="@+id/botonasisnfcc"
                    android:layout_width="350px"
                    android:layout_height="300px"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    
                    android:textSize="40sp"
                    android:background="@drawable/button_nfc"
                android:textStyle="bold"
                android:typeface="serif" />

            </RelativeLayout>

            <Button
                android:id="@+id/btneliminargrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:layout_marginTop="45dp"
                android:background="@drawable/button_blue"
                android:text="Eliminar grupo"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <Button
                android:id="@+id/btnvistasgrupo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="30px"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_violet"
                android:text="Consultar asistencias"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold"
                android:typeface="serif" />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>