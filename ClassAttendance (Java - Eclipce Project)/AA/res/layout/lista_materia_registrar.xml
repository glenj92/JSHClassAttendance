    android:layout_height="match_parent"
    android:background="@drawable/simple_stylish_background" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tvlistametriaregistarrmateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:background="@drawable/canvas_darkblue"
            android:textColor="#ffffff"
            android:text="Seleccionar asignatura"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <ListView
            android:id="@+id/llvlistamateriaregistarmateria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >
        </ListView>

    </LinearLayout>

</RelativeLayout>
